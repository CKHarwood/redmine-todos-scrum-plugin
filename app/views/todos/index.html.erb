<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'todos', :plugin => 'redmine_todos_plugin' %>
<% end %>


<div id=project-todos>
	<h2>Todos</h2>
	<div style="" >
		<%= render :partial => 'new_todo', 
					:locals => {:todo => Todo.new(:project => @project,:assigned_to => User.current), 
											:update_target => "todo-children-ul_#{ @project }"}  
		%>
		
	</div>

	<%= render :partial => 'root_todos', :locals => {:todos => @todos, :project_id => @project, :editable => true} %>
</div>
